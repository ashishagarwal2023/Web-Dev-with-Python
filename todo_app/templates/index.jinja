<html>
    <head>
        <title>To-do app</title>
    </head>
    <body>
        <h1>To-do app</h1>
        <form action="{{url_for('addTodo')}}" method="POST">
            <input type="text" name="todoName" placeholder="Enter task">
            <input type="submit" value="Add">
        </form>
        <ul>
            {% for task in items %}
            {% if task.done %}
            <li>
                <del>
                    {{task.name}}
                </del>
            </li>
            {% else %}
            <li>
                {{task.name}}
                <a href="{{url_for('markDone', task=task.name)}}">Mark as done</a>
            </li>
            {% endif %}
            {% endfor %}
        </ul>

    </body>
</html>