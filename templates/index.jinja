<html>
    <head>
        <title>My page</title>
    </head>
    <body>
        <h1>Hello {{name}}</h1>
        <p>My favourite fruits are:</p>
        <ol>
            {% for fruit in fruits%}
                <li>{{fruit}}
            {% endfor %}
        </ol>
        {% if choco %}
            <p>I like chocolates!</p>
        {% else %}
            <p>I don't like chocolates!</p>
        {% endif %}

        <p>Cheap sale:</p>
        <ul>
        {% for product in shopItems %}
            <li>{{product.name}} - ${{product.price}}</li>
        {% endfor %}
        </ul>
    </body>
</html>